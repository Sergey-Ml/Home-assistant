{
    "name": "HASS Configurator",
    "version": "0.1.2",
    "slug": "hass-configurator",
    "description": "HASS Configurator - Browser-based configuration file editor for Home Assistant.",
    "url": "https://github.com/danielperna84/hassio-addons/tree/master/hass-configurator",
    "startup": "application",
    "webui": "http://[HOST]:[PORT:3218]",
    "boot": "auto",
    "ports": {
      "3218/tcp": 3218
    },
    "map": ["config:rw", "ssl"],
    "options": {
      "hass_api": "http://homeassistant:8123/api/",
      "hass_api_password": "",
      "credentials": "admin:secret",
      "certfile": "fullchain.pem",
      "keyfile": "privkey.pem",
      "ssl": false,
      "allowed_networks": ["192.168.0.0/16"],
      "banned_ips": ["8.8.8.8"],
      "ignore_pattern": ["__pycache__"]
    },
    "schema": {
      "hass_api": "url",
      "hass_api_password": "str",
      "credentials": "match(.*:.*)",
      "certfile": "str",
      "keyfile": "str",
      "ssl": "bool",
      "allowed_networks": ["str"],
      "banned_ips": ["str"],
      "ignore_pattern": ["str"]
    }
  }
  
