{
  "name": "ZWave JS",
  "version": "0.1.0",
  "slug": "zwave_js",
  "description": "Control a ZWave network with Home Assistant Nextgen",
  "arch": ["amd64", "i386", "armhf", "armv7", "aarch64"],
  "url": "https://github.com/home-assistant/hassio-addons/tree/master/zwave",
  "startup": "services",
  "boot": "auto",
  "init": false,
  "stage": "experimental",
  "homeassistant": "2021.2.0.dev20210118",
  "ports": {
    "3000/tcp": null
  },
  "ports_description": {
    "3000/tcp": "Zwave JS communication"
  },
  "services": ["mqtt:want"],
  "discovery": ["ozw"],
  "auto_uart": true,
  "options": {
    "device": null,
    "network_key": ""
  },
  "schema": {
    "device": "str",
    "network_key": "password",
    "emulate_hardware": "bool?"
  },
  "image": "homeassistant/{arch}-addon-zwave_js"
}
