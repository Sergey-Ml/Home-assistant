{
  "name": "Dnsmasq",
  "version": "1.4",
  "slug": "dnsmasq",
  "description": "A simple DNS server",
  "url": "https://github.com/home-assistant/hassio-addons/tree/master/dnsmasq",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "advanced": true,
  "startup": "system",
  "boot": "auto",
  "ports": {
    "53/tcp": 53,
    "53/udp": 53
  },
  "options": {
    "defaults": ["8.8.8.8", "8.8.4.4"],
    "forwards": [],
    "hosts": [],
    "srv-hosts": []
  },
  "schema": {
    "defaults": ["str"],
    "forwards": [
      {
        "domain": "str",
        "server": "str"
      }
    ],
    "hosts": [
      {
        "host": "str",
        "ip": "str"
      }
    ],
    "services": [
      {
        "srv": "str",
        "host": "str",
        "port": "str",
        "priority": "int",
        "weight": "int"
      }
    ],
    "extra-options": [
      {
          "option": "str"
      }
    ]
  },
  "image": "homeassistant/{arch}-addon-dnsmasq"
}
