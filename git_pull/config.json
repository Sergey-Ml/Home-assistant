{
  "name": "Git pull",
  "version": "7.3",
  "slug": "git_pull",
  "description": "Simple git pull to update the local configuration",
  "url": "https://home-assistant.io/addons/git_pull/",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "services",
  "boot": "manual",
  "hassio_api": true,
  "hassio_role": "homeassistant",
  "map": ["config:rw"],
  "ports": {
    "8004/tcp": 8004
  },
  "options": {
    "deployment_key": [],
    "deployment_key_protocol": "rsa",
    "deployment_user": "",
    "deployment_password": "",
    "git_branch": "master",
    "git_command": "pull",
    "git_remote": "origin",
    "git_prune": false,
    "repository": null,
    "auto_restart": false,
    "restart_ignore": [
      "ui-lovelace.yaml",
      ".gitignore"
    ],
    "repeat": {
      "active": false,
      "interval": 300
    },
    "webhook": {
      "active": false,
      "secret": null,
      "type": "gitlab",
      "whitelist": "0.0.0.0/0"
    }
  },
  "schema": {
    "deployment_key": ["str"],
    "deployment_key_protocol": "match(rsa|dsa|ecdsa|ed25519|rsa)",
    "deployment_user": "str",
    "deployment_password": "str",
    "git_branch": "str",
    "git_command": "match(pull|reset)",
    "git_remote": "str",
    "git_prune": "bool",
    "repository": "match((?:.+):(\/\/)?(.*?)(\\.git)(\/?|\\#[-\\d\\w._]+?))",
    "auto_restart": "bool",
    "restart_ignore": ["str"],
    "repeat": {
      "active": "bool",
      "interval": "int"
    },
    "webhook": {
      "active": "bool",
      "secret": "?str",
      "type": "?match(gitea|gogs|github|gitlab|simple)",
      "whitelist": "?str"
    }
  },
  "image": "homeassistant/{arch}-addon-git_pull"
}
